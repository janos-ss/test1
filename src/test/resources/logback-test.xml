<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy.MM.dd HH:mm:ss} %-5level %logger{20} %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.sonarsource.ruleapi" level="DEBUG"/>

    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
